<%- include('./partials/admin-dash.ejs') %>

<div class="row">

<div class="col-lg-6">
    <small class="text-light fw-semibold">Horizontal</small>
    <div class="demo-inline-spacing mt-3">
      <div class="list-group list-group-horizontal-md text-md-center">
        <a
          class="list-group-item list-group-item-action active"
          id="home-list-item"
          data-bs-toggle="list"
          href="#horizontal-home"
          >Products</a
        >
        <a
          class="list-group-item list-group-item-action"
          id="profile-list-item"
          data-bs-toggle="list"
          href="#horizontal-profile"
          >Product Details</a
        >
        <a
          class="list-group-item list-group-item-action"
          id="messages-list-item"
          data-bs-toggle="list"
          href="#horizontal-messages"
          >Address</a
        >
      </div>
      <div class="tab-content px-0 mt-0">
        <div class="tab-pane fade show active" id="horizontal-home">
            <div class="row">
                <% orderProducts.items.forEach((p)=> { %>
                <div class="col-lg-3 ml-3">
                    <h6 class="mt-2 text-muted text-center"><%= p.name%></h6>
                    <div class="card mb-4">
                        <ul class="list-group list-group-flush text-center">
                            <li class="list-group-item">Quantity: <%= p.quantity%></li>
                            <li class="list-group-item">Price: <%= p.price%></li>
                            <li class="list-group-item">Total Price: <%= p.quantity*p.price%></li>
                        </ul>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        <div class="tab-pane fade" id="horizontal-profile">
            <table class="table table-dark">
                
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Total Products</td>
                    <td><%= orderProducts.totalProduct%></td>
                    
                  </tr>
                  <tr>
                    <th scope="row">2</th>
                    <td>Total Amount</td>
                    <td><%= orderProducts.totalAmount%></td>
                    
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td>Oder Status</td>
                    <td><%= orderProducts.orderStatus%></td>
                   
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td>Payment Status</td>
                    <td><%= orderProducts.paymentStatus%></td>
                   
                  </tr>
                </tbody>
              </table>
        </div>
        <div class="tab-pane fade" id="horizontal-messages">
         <h6 class="text-center">Shipping Address</h6>
         <p class="text-success">First Name:  <span class="text-dark"><%= orderProducts.Address.firstName%></span></p>
            
            <p class="text-success">Last Name:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="text-dark"><%= orderProducts.Address.lastName%></span> </p>
            <p class="text-success">Mobile:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    <span class="text-dark"><%= orderProducts.Address.mobileNo%></span></p>
            <p class="text-success">Address: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <span class="text-dark"><%= orderProducts.Address.address%></span</p>
            <p class="text-success">City:   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <span class="text-dark"><%= orderProducts.Address.city%></span></p>
            <p class="text-success">Locality: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="text-dark"><%= orderProducts.Address.locality%></span></p>
            <p class="text-success">Landmark: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <span class="text-dark"> <%= orderProducts.Address.landmark%></span></p>
        </div>
      
      </div>
    </div>
  </div>
</div>





    
   


