

 <%- include('./partials/userHeader.ejs') %>



  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Wishlist</h5>
        <div class="table-responsive">
          <% if (wishProducts) { %> <% if (wishProducts.myWishlist.length > 0 ) { %>
          <table class="table table-hover">
            <thead>
              <tr>
                
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                
                <th scope="col">Add to cart</th>
                <th scope="col">remove</th>
               
              </tr>
            </thead>
            <tbody>
              <% wishProducts.myWishlist.forEach((p) => { %>
                
                <tr>
             
                  <td>
                    <a href="/singleProduct/<%= p.ProductId.id %>">
                    <img
                    src="/images/productImages/<%=p.ProductId.image%>"
                    style="width: 50px"
                    alt=""
                  />
                  </a>
                   <div class="cart_productitem_title">
                    <h6><%=p.name%></h6>
                    
                  </div>
                  </td>
                  <td>
                  <%=p.ProductId.Price%>
                  </td>
                  <td>
                    <a class="ml-3 btn btn-primary px-3" onclick= "addTocart('<%= p.ProductId._id %>','<%= p.name %>','<%= p.ProductId.Price %>')"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                       
                  </td>
                  <td >
                    <a class="btn btn-danger" href="/removeWishlist/<%=p._id%>"
                      ><i class="fa fa-times"></i>
                    </a>
                  </td>
                 
                  
                 

                </tr>
                <% }) %>


            </tbody>
          </table>
        </div>
      </div>
    </div>
   
  </div>
  <% }else{ %>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12 mt-5">
          <div>
            <img src="/img/empty-wishlist.jpeg" style="width: 44%" alt="" />
          </div>
          <div class="">
            <div class="cart__btn">
              <a href="/shopView/?page=1">Continue Shopping</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %> <% }else { %>
    <div class="container">
      <div class="row text-center">
        <div class="col-md-12 mt-5">
          <div>
            <img src="/img/empty-wishlist.jpeg" style="width: 44%" alt="" />
          </div>
          <div>
            <div class="cart__btn">
              <a href="/shopView">Continue Shopping</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %> 


  <%- include('./partials/userFooter.ejs') %>


